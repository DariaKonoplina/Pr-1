<Window x:Class="Pr_1_library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pr_1_library"
        mc:Ignorable="d"
        Title="Практическая 1" Height="325" Width="500" ResizeMode="NoResize">
    <Grid Margin="0,0,0,3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"></RowDefinition>
            <RowDefinition Height="68*"></RowDefinition>
            <RowDefinition Height="71*"></RowDefinition>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Menu Grid.ColumnSpan="2" Background="#FFFFBAD4" BorderBrush="#FF5992CA">
            <MenuItem Header="Сохранить" Click="miSave_Click" BorderBrush="#FF5992CA"></MenuItem>
            <MenuItem Header="Открыть" Click="miOpen_Click" BorderBrush="#FF5992CA"></MenuItem>
            <MenuItem Header="Заполнить" Click="miFillMas_Click" BorderBrush="#FF5992CA"></MenuItem>
            <MenuItem Header="Очистить" Click="miClear_Click" BorderBrush="#FF5992CA"></MenuItem>
            <MenuItem Header="О программе" Click="miProgram_Click" BorderBrush="#FF5992CA"></MenuItem>
            <MenuItem Header="Выход" Click="miExit_Click" BorderBrush="#FF5992CA"></MenuItem>
        </Menu>
        <DataGrid CellEditEnding="dataGrid_CellEditEnding" Grid.ColumnSpan="2" x:Name="dataGrid" Margin="0,17,0,135" Grid.RowSpan="3" Background="#FFFFBAD4" BorderBrush="#FF5992CA"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,19,0,0">
            <Button Content="Заполнить массив значениями" Height="24" Width="176" Click="miFillMas_Click" Background="#FFFFBAD4" BorderBrush="#FF5992CA"/>
            <Button Content="Вывести решение" Width="176" Click="btnAnsw_Click" Background="#FFFFBAD4" BorderBrush="#FF5992CA"/>
            <Button Content="Очистить все поля программы" Height="24" Width="176" Click="miClear_Click" Background="#FFFFBAD4" BorderBrush="#FF5992CA"/>
            <Button Content="О программе" Height="24" Width="176" Click="miProgram_Click" Background="#FFFFBAD4" BorderBrush="#FF5992CA"/>
            <Button Content="Выход" Height="24" Width="176" Click="miExit_Click" Background="#FFFFBAD4" BorderBrush="#FF5992CA"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,1,0,66">
            <Label Content="Введите количество колонок" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="178"/>
            <TextBox x:Name="tbKol" TextWrapping="Wrap"  Width="48" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,63,0,0">
            <Label Content="Укажите диапазон чисел" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="180"/>
            <TextBox x:Name="tbRange" TextWrapping="Wrap"  Width="48" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
